{
  "manifest_version": 2,
  "name": "name",
  "version": "1.0",
  "description": "desc",
  "icons": {
    "48": "images/ico.png"
  },
  "browser_action": {
    "default_icon": "images/ico.png",
    "default_title": "title",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content_scripts.js"
      ]
    }
  ],
  "permissions": [
    "<all_urls>",
    "bookmarks"
  ]
}